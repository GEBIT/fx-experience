<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.comtel2000</groupId>
		<artifactId>fx-parent</artifactId>
		<version>8.2.5-gebit1</version>
	</parent>
	<artifactId>fx-onscreen-keyboard-swing</artifactId>
	<name>fx-onscreen-keyboard-swing</name>
	<description>JavaFX on-screen keyboard Swing support module.</description>
	<url>http://comtel2000.org</url>
	<packaging>bundle</packaging>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.comtel2000</groupId>
			<artifactId>fx-onscreen-keyboard</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
		</dependency>
	</dependencies>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.10.3</version>
				<executions>
					<execution>
						<id>attach-javadocs</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
		        <groupId>org.apache.felix</groupId>
		        <artifactId>maven-bundle-plugin</artifactId>
		        <extensions>true</extensions>
		        <configuration>
					<instructions>
			        	<Export-Package>org.comtel2000.swing.*;version="${pom.version}"</Export-Package>
			        	<Import-Package>!org.comtel2000.swing.*,!com.sun.javafx.*,!javafx.*,org.comtel2000.keyboard.*;version="${pom.version}",*</Import-Package>
					</instructions>
		        </configuration>
			</plugin>
		</plugins>
	</build>
	
</project>